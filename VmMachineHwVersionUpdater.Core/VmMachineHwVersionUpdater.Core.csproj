<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>VmMachineHwVersionUpdater.Core</RootNamespace>
    <AssemblyName>VmMachineHwVersionUpdater.Core</AssemblyName>
    <TargetFramework>net48</TargetFramework>
    <Version>$([System.DateTime]::UtcNow.ToString(yyyy.M.d.Hmm))-develop</Version>
    <Authors>Sebastian Walter</Authors>
    <Copyright>Copyright © 2014 - $([System.DateTime]::UtcNow.ToString(yyyy)) evilbaschdi</Copyright>
    <LangVersion>8</LangVersion>
    <Company>evilbaschdi (Sebastian Walter)</Company>
    <Product>VM Machine Hardware Version Updater</Product>
    <PackageProjectUrl>https://github.com/evilbaschdi/VmMachineHwVersionUpdater</PackageProjectUrl>
    <RepositoryUrl>https://github.com/evilbaschdi/VmMachineHwVersionUpdater</RepositoryUrl>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VmMachineHwVersionUpdater.Core.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EvilBaschdi.Core" Version="2019.11.28.1936-develop" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="3.0.0-alpha0270" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.0-preview3.19553.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="3.1.0-preview3.19553.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.1.0-preview3.19553.2" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.Vsts.Git" Version="1.0.0-beta2-19367-01">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0-preview.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings\GuestOsStringMapping.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Settings\VmPools.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Settings\GuestOsOutputStringMapping.cs">
      <DependentUpon>IGuestOsOutputStringMapping.cs</DependentUpon>
    </Compile>
    <Compile Update="Settings\PathSettings.cs">
      <DependentUpon>IPathSettings.cs</DependentUpon>
    </Compile>
    <Compile Update="Settings\GuestOsStringMapping.cs">
      <DependentUpon>GuestOsStringMapping.json</DependentUpon>
    </Compile>
    <Compile Update="Settings\VmPools.cs">
      <DependentUpon>VmPools.json</DependentUpon>
    </Compile>
    <Compile Update="GuestOsesInUse.cs">
      <DependentUpon>IGuestOsesInUse.cs</DependentUpon>
    </Compile>
    <Compile Update="HardwareVersion.cs">
      <DependentUpon>IHardwareVersion.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
