<mah:MetroWindow x:Class="VmMachineHwVersionUpdater.AddEditAnnotationDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Add / Edit Description"
                 TitleCharacterCasing="Normal"
                 Width="450"
                 Height="450"
                 Icon="b.ico"
                 WindowStartupLocation="CenterOwner"
                 ShowIconOnTitleBar="False">

    <TextBox Name="Annotation" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
             Text="{Binding AnnotationText,Mode=TwoWay}" />
</mah:MetroWindow>