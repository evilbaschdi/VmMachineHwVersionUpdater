<controls:MetroWindow x:Class="VmMachineHwVersionUpdater.AddEditAnnotationDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      Title="Add / Edit Description" TitleCharacterCasing="Normal" Height="450" Width="450">
    <!--  RightWindowCommands  -->
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>

            <!-- Update all -->
            <Button Click="UpdateAnnotationClick">

                <iconPacks:PackIconMaterial Kind="ContentSave" Width="20" Height="20" HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />

            </Button>

        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
    <TextBox Name="Annotation" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="True" HorizontalScrollBarVisibility="Auto"
             VerticalScrollBarVisibility="Auto" />
</controls:MetroWindow>